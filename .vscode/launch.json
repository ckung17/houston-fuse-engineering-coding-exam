{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "Start Frontend Dev Server",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Launch Frontend (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "Start Frontend Dev Server"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (API + Frontend)",
      "configurations": [
        "Launch Frontend (Chrome)"
      ],
      "preLaunchTask": "Start API",
      "stopAll": true
    }
  ]
}